{
  "extends": [
    "plugin:storybook/recommended",
    "next",
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended"
  ],
  "plugins": ["prettier"],
  "globals": {
    "React": "readonly"
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"]
    }
  ],
  "ignorePatterns": ["*.lintstagedrc.js"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "error",
    "no-unused-vars": "warn"
  }
}
